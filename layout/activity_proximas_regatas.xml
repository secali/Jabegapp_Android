<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sergiocl.jabegapp.ProximasRegatas"
    android:background="@drawable/meses">

    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"

        android:id="@+id/b_mayo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:background="#00ffffff" />

    <Button
        android:layout_width="250dp"
        android:layout_height="83dp"
        android:id="@+id/b_junio"
        android:layout_below="@+id/b_mayo"
        android:background="#00ffffff"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="86dp"
        android:id="@+id/b_julio"
        android:layout_below="@+id/b_junio"
        android:background="#00ffffff"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="85dp"
        android:id="@+id/b_agosto"
        android:layout_below="@+id/b_julio"
        android:background="#00ffffff"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="89dp"
        android:id="@+id/b_septiembre"
        android:layout_below="@+id/b_agosto"
        android:background="#00ffffff"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
