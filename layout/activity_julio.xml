<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/azulfundo_jul"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sergiocl.jabegapp.Julio">

    <Button
        android:id="@+id/b_rincon"
        android:layout_width="wrap_content"
        android:layout_height="77dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b_cala"
        android:background="#00ffffff" />

    <Button
        android:id="@+id/b_palo"
        android:layout_width="wrap_content"
        android:layout_height="77dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b_rincon"
        android:layout_marginTop="13dp"
        android:background="#00ffffff" />

    <Button
        android:id="@+id/b_torredel"
        android:layout_width="wrap_content"
        android:layout_height="77dp"

        android:layout_marginTop="12dp"
        android:background="#00ffffff"
        android:layout_below="@+id/b_palo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/b_arana"
        android:layout_width="wrap_content"
        android:layout_height="77dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b_torredel"
        android:background="#00ffffff" />

    <Button
        android:id="@+id/b_torremol"
        android:layout_width="wrap_content"
        android:layout_height="77dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b_arana"
        android:layout_marginTop="12dp"
        android:background="#00ffffff" />

    <Button
        android:id="@+id/b_cala"
        android:layout_width="wrap_content"
        android:layout_height="77dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="78dp"
        android:background="#00ffffff" />

</RelativeLayout>
